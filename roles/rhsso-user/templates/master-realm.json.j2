{
    "apiVersion": "aerogear.org/v1alpha1",
    "kind": "KeycloakRealm",
    "metadata": {
      "name": "master"
    },
    "spec": {
        "browserRedirectorIdentityProvider": "openshift-v3",
        "createOnly": true,
        "id": "master",
        "realm": "master",
        "displayName": "master",
        "enabled": true,
        "users": [
            {% for user in rhsso_seed_users_all | selectattr('admin','match','cluster') %}
            {
                "enabled":true,
                "attributes":{},
                "username":"{{ user.username }}",
                "emailVerified":true,
                "email":"{{ user.email }}",
                "password": "{{ user.password }}",
                "realmRoles": [
                    "offline_access",
                    "uma_authorization",
                    "create-realm"
                ],
                "clientRoles": {
                    "account": [
                        "manage-account",
                        "view-profile"
                    ],
                    "master-realm": [
                        "manage-users",
                        "view-clients",
                        "view-realm"
                    ]
                },
                "outputSecret": "{{ user.username | replace("@", "-")}}-credentials"
            }{% if not loop.last %},{% endif %}
            {% endfor %}
        ],
        "identityProviders": [
            {
                "alias": "openshift-v3",
                "providerId": "openshift-v3",
                "enabled": true,
                "trustEmail": false,
                "storeToken": true,
                "addReadTokenRoleOnCreate": true,
                "firstBrokerLoginFlowAlias": "first broker login",
                "config": {
                    "hideOnLoginPage": "",
                    "baseUrl": "{{ openshift_master_url }}",
                    "clientId": "{{ rhsso_user_client_id }}",
                    "disableUserInfo": "",
                    "clientSecret": "{{ rhsso_user_client_secret }}",
                    "defaultScope": "user:full",
                    "useJwksUrl": "true"
                }
            }
        ]

    }
  }
