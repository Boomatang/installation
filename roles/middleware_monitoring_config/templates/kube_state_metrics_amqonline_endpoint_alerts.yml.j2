      - alert: RHMIAMQOnlineConsoleServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='console'} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
