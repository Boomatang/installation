apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata: 
  labels:
    monitoring-key: "{{monitoring_label_value}}"
  name: mobile-unifiedpush-endpoint-alerts
spec:   
  groups: 
    - name: mobile-unifiedpush-endpoint.rules
      rules: 
      - alert: RHMIMobileUnifiedPushOperatorMetricsServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='unifiedpush-operator-metrics'} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
        for: 5m
        labels:
          severity: critical
      - alert: RHMIMobileUnifiedPushUnifiedPushPostgreSqlServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='unifiedpush-postgresql'} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
        for: 5m
        labels:
          severity: critical
      - alert: RHMIMobileUnifiedPushServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='unifiedpush-unifiedpush'} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
        for: 5m
        labels:
          severity: critical
      - alert: RHMIMobileUnifiedPushProxyServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='unifiedpush-unifiedpush-proxy'} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
        for: 5m
        labels:
          severity: critical