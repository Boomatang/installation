apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata: 
  labels:
    monitoring-key: "{{monitoring_label_value}}"
  name: ksm-codeready-endpoint-alerts
spec:   
  groups: 
    - name: codeready-endpoint.rules
      rules: 
      - alert: RHMICodreadyCheHostServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='che-host'} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
        for: 5m
        labels:
          severity: critical
      - alert: RHMICodereadyDevfileRegistryServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='devfile-registry'} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
        for: 5m
        labels:
          severity: critical
      - alert: RHMICodereadyPluginRegistryServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='plugin-registry'} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
        for: 5m
        labels:
          severity: critical
      - alert: RHMICodereadyPostgresServiceEndpointDown
        annotations:
          sop_url: <TODO>
          message: >-
            No {{ "{{" }}$labels.endpoint{{ "}}" }} endpoints in namespace {{ "{{" }}$labels.namespace{{ "}}" }} is down. Expected at least 1.
        expr: |
          kube_endpoint_address_available{endpoint='plugin-registry', namespace="{{ eval_che_namespace }}"} * on (namespace) group_left kube_namespace_labels{label_monitoring_key='middleware'} < 1
        for: 5m
        labels:
          severity: critical